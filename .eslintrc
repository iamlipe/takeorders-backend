{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "airbnb-base",
    "plugin:mocha/recommended",
    "airbnb-typescript/base"
  ],
  "parserOptions": { "ecmaVersion": 2021, "sourceType": "module" },
  "plugins": ["prettier", "@typescript-eslint"],
  "rules": {
    "semi": [2, "always"],
    "max-len": ["error", 100]
  },
  "env": {
    "node": true
  }
}